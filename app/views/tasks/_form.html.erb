<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :context, style: "display: block" %>
    <%= form.text_field :context %>
  </div>

  <div>
    <%= form.label :project, style: "display: block" %>
    <%= form.text_field :project %>
  </div>

  <div>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date %>
  </div>

  <div>
    <%= form.label :schedule_date, style: "display: block" %>
    <%= form.date_field :schedule_date %>
  </div>

  <div>
    <%= form.label :impact, style: "display: block" %>
    <%= form.check_box :impact %>
  </div>

  <div>
    <%= form.label :energy_level, style: "display: block" %>
    <%= form.check_box :energy_level %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes, placeholder: 'Enter done and next action... ' %>
  </div>

  <div>
    <%= form.label :size, style: "display: block" %>
    <%= form.check_box :size %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
