<!-- app/views/tasks/analytics.html.erb -->

<div class="container mt-4">
  <h1>Task Analytics</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Last Edited Date</th>
        <th>Count of DONE Tasks</th>
      </tr>
    </thead>
    <tbody>
      <% @done_tasks_by_last_edited.each do |last_edited_date, tasks| %>
        <tr>
          <td><%= last_edited_date %></td>
          <td><%= tasks.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
